<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="4dp"
    android:background="@drawable/list_item_round_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:text="Pikachu"/>

    <TextView
        android:id="@+id/txtPokemonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/title_size"
        android:text="#25"/>

    <TextView
        android:id="@+id/txtPokemonType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPokemonName"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:text="Fire "
        android:textSize="@dimen/description_size" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:layout_below="@+id/txtPokemonId"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/imgPokemon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </LinearLayout>



</RelativeLayout>